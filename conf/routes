# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET				/					controllers.Application.index()
GET				/product			controllers.Application.product()
GET				/category			controllers.Application.category()
GET				/howtopay			controllers.Application.howtopay()
GET				/howtoshipping		controllers.Application.howtoshipping()
GET				/about				controllers.Application.about()
GET				/board				controllers.Application.board()

GET				/admin				controllers.Administrator.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
